      
      <div class="box">
        <article class="media">
          <div class="media-left">
                <figure class="image is-64x64">
                  <%= gravatar_image_tag(post.user.email, size: 64, alt: post.user.name) %>
                </figure>
          </div>
             <div class="media-content">
                <div class="content">
                     
                         <strong><%= link_to post.user.name, user_path(post.user)%></strong><br/>
                         <small><%= post.created_at.strftime("%Y/%m/%d") %></small><br/> 
                         <p> <%= post.content %></p>
                </div>
        <%if user_signed_in?%>
      
        <nav class="level">
          <div class="level-left is-mobile">
              <% if current_user==(@user) %>
              
            <%= link_to edit_post_path(post), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%=link_to post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
            <%end%>
          </div>
        </nav>
        
        <%end%>
      </div>
        </article>
        
      </div>
      
   
  
