<%if user_signed_in?%>
<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :content, label: "Post about it", visible: false, input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new post..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-danger" %>
<% end %>
<%end%>